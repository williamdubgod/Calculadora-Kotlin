<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_operation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@color/dark_background"
        android:ellipsize="start"
        android:gravity="end"
        android:paddingRight="40dp"
        android:text=""
        android:textColor="@color/medium_emphasis"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/dark_background"
        android:ellipsize="start"
        android:gravity="end"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ____________Part 1____________ -->

    <LinearLayout
        android:id="@+id/top_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clean"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_buttons"
            android:text="C" />

        <TextView
            android:id="@+id/invert_signal"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_buttons"
            android:text="+/-" />

        <TextView
            android:id="@+id/percentage"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_buttons"
            android:text="%" />

        <TextView
            android:id="@+id/division"
            style="@style/operators_style"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/operators_button"
            android:text="/" />

    </LinearLayout>

    <!-- ____________Part 2____________ -->

    <LinearLayout
        android:id="@+id/top_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_seven"
            style="@style/numbers_style"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="7" />

        <TextView
            android:id="@+id/number_eight"
            style="@style/numbers_style"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="8" />

        <TextView
            android:id="@+id/number_nine"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="9" />

        <TextView
            android:id="@+id/multiplication"
            style="@style/operators_style"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/operators_button"
            android:text="*" />

    </LinearLayout>

    <!-- ____________Part 3____________ -->

    <LinearLayout
        android:id="@+id/middle_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_four"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="4" />

        <TextView
            android:id="@+id/number_five"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="5" />

        <TextView
            android:id="@+id/number_six"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="6" />

        <TextView
            android:id="@+id/subtraction"
            style="@style/operators_style"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/operators_button"
            android:text="-" />

    </LinearLayout>

    <!-- ____________Part 4____________ -->

    <LinearLayout
        android:id="@+id/bottom_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_one"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="1" />

        <TextView
            android:id="@+id/number_two"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="2" />

        <TextView
            android:id="@+id/number_tree"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="3" />

        <TextView
            android:id="@+id/plus"
            style="@style/operators_style"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/operators_button"
            android:text="+" />

    </LinearLayout>

    <!-- ____________Part 4____________ -->

    <LinearLayout
        android:id="@+id/final_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dot"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="." />

        <TextView
            android:id="@+id/number_zero"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:text="0" />

        <ImageView
            android:id="@+id/backspace"
            style="@style/other_styles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/numbers_button"
            android:scaleType="center"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/equals"
            style="@style/operators_style"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/operators_button"
            android:text="=" />

    </LinearLayout>


</LinearLayout>